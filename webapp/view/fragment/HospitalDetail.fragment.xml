<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:fc="sap.f.cards"
	xmlns:core="sap.ui.core">
	<ResponsivePopover showHeader="false" contentWidth="15rem" placement="HorizontalPreferredRight">
		<content>
			<f:Card>
				<f:content>
				</f:content>
				<f:header>
					<fc:NumericHeader title="{hospital>Name}" subtitle="负责人：{hospital>Responsible}" number="{hospital>Confirmed}" scale="" state="Good" details="确诊病例">
					<fc:sideIndicators>
						<fc:NumericSideIndicator title="疑似病例" number="{hospital>Unconfirmed}" unit="" />
						<fc:NumericSideIndicator title="密切接触者" number="{hospital>Contact}" unit="" />
					</fc:sideIndicators>
					</fc:NumericHeader>
				</f:header>
			</f:Card>
		</content>
		<beginButton>
			<Button text="查看详情" />
		</beginButton>
	</ResponsivePopover>
</core:FragmentDefinition>