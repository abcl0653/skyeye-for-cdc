<core:FragmentDefinition xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:fc="sap.f.cards" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:core="sap.ui.core">
	<ResponsivePopover showHeader="false" contentWidth="15rem" placement="HorizontalPreferredRight">
		<content>
			<f:Card>
				<f:content>
				</f:content>
				<f:header>
					<fc:NumericHeader title="{block>Name}" subtitle="负责人：{block>Responsible}" number="{block>Confirmed}" scale="" state="Good" details="确诊病例">
						<fc:sideIndicators>
							<fc:NumericSideIndicator title="疑似病例" number="{block>Unconfirmed}" unit="" />
							<fc:NumericSideIndicator title="密切接触者" number="{block>Contact}" unit="" />
						</fc:sideIndicators>
					</fc:NumericHeader>
				</f:header>
				<f:content>
					<form:SimpleForm layout="ResponsiveGridLayout" labelSpanS="4" editable="true" singleContainerFullSize="false">
						<Label text="总人数" />
						<Text text="100" />
						<Label text="总户数" />
						<Text text="100" />
						
					</form:SimpleForm>
				</f:content>
			</f:Card>
		</content>
		<beginButton>
			<Button text="查看详情" />
		</beginButton>
	</ResponsivePopover>
</core:FragmentDefinition>