<mvc:View controllerName="sap.ibso.skyeyeForCdc.controller.Staff" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:fb="sap.ui.comp.filterbar" 
	xmlns:mc="sap.suite.ui.microchart" 
	xmlns:core="sap.ui.core">
	<f:DynamicPage id="dynamicPageId" headerExpanded="true" toggleHeaderOnTitleClick="false" fitContent="false" class="sapUiNoContentPadding myDynamicPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="工作人员与志愿者" />
				</f:heading>
				<f:content>
				</f:content>
				<f:actions>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<HeaderContainer>
						<VBox width="8rem">
							<Label text="省/市" />
							<ScrollContainer vertical="true" horizontal="false" height="100%" width="100%">
								<List>
									<StandardListItem title="全部" />
									<StandardListItem title="上海" />
								</List>
							</ScrollContainer>
						</VBox>
						<VBox width="8rem">
							<Label text="县/区" />
							<ScrollContainer vertical="true" horizontal="false" height="100%" width="100%">
								<List>
									<StandardListItem title="全部" />
									<StandardListItem title="浦东新区" />
									<StandardListItem title="黄浦区" />
								</List>
							</ScrollContainer>
						</VBox>
						<VBox width="8rem">
							<Label text="街道" />
							<ScrollContainer vertical="true" horizontal="false" height="100%" width="100%">
								<List>
									<StandardListItem title="全部" />
									<StandardListItem title="张江镇" />
									<StandardListItem title="金桥镇" />
								</List>
							</ScrollContainer>
						</VBox>
						<VBox width="8rem">
							<Label text="社区" />
							<ScrollContainer vertical="true" horizontal="false" height="100%" width="100%">
								<List>
									<StandardListItem title="全部" />
									<StandardListItem title="光明小区社区" />
									<StandardListItem title="科苑社区" />
								</List>
							</ScrollContainer>
						</VBox>
						<VBox width="20rem">
							<Label text="人口来源" />
							<mc:InteractiveDonutChart selectionChanged="onSelectionChanged">
								<mc:segments>
									<mc:InteractiveDonutChartSegment label="本地常住人口" value="40.0" displayedValue="40.0%" />
									<mc:InteractiveDonutChartSegment label="外来常住人口" value="21.5" displayedValue="21.5%" />
									<mc:InteractiveDonutChartSegment label="其他人口" value="38.5" displayedValue="38.5%" />
								</mc:segments>
							</mc:InteractiveDonutChart>
						</VBox>
						<VBox width="20rem">
							<Label text="居住状态" />
							<mc:InteractiveDonutChart selectionChanged="onSelectionChanged">
								<mc:segments>
									<mc:InteractiveDonutChartSegment label="居家/本地就医" value="40.0" displayedValue="40.0%" />
									<mc:InteractiveDonutChartSegment label="长期外出" value="21.5" displayedValue="21.5%" />
									<mc:InteractiveDonutChartSegment label="未知" value="38.5" displayedValue="38.5%" />
								</mc:segments>
							</mc:InteractiveDonutChart>
						</VBox>
					</HeaderContainer>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table items="{staff>/}" itemPress="onPressItem">
				<columns>
					<Column >
						<Text text="地址" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="人数" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="人口来源" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="居住状态" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="受影响状态" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="当前管控级别" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="每日外出人次" />
					</Column>
					<Column >
						<Text text="负责人" />
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true">
						<Text text="备注" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle" type="Navigation">
						<cells>
							<ObjectIdentifier title="{staff>Address}" text="{staff>City} {staff>District} {staff>Town} {staff>Estate}" />
							<ObjectNumber number="{staff>CountOfPeople}" unit="人" />
							<Text text="{staff>Residence}" />
							<Text text="{staff>Status}" />
							<Text text="{staff>Affectness}" />
							<Text text="{staff>ManagementLevel}" />
							<Text text="{staff>Outgoing}" />
							<Text text="{staff>Responsible}" />
							<Text text="{staff>Remark}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>