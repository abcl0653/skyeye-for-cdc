<mvc:View controllerName="sap.ibso.skyeyeForCdc.controller.CaseDetail" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns:m="sap.m" 
	xmlns="sap.uxap" 
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" 
	xmlns:core="sap.ui.core">
	<ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" >
		<headerTitle>
			<ObjectPageHeader objectTitle="{case>Title}" objectSubtitle="上海市" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false">
				<breadcrumbs>
					<m:Breadcrumbs currentLocationText="案例">
						<m:Link text="案例列表" press="onPressCaseList" />
					</m:Breadcrumbs>
				</breadcrumbs>
				<breadCrumbsLinks>
					<m:Link id="breadCrumbLink1" text="Links in old aggregation" press="handleLink1Press" />
					<m:Link id="breadCrumbLink2" text="Don't appear in ObjectPageHeader" press="handleLink2Press" />
				</breadCrumbsLinks>
			</ObjectPageHeader>
		</headerTitle>

		<headerContent>
			<l:VerticalLayout>
				<m:Link text="+33 6 4512 5158" />
				<m:Link text="DeniseSmith@sap.com" />
			</l:VerticalLayout>

			<l:HorizontalLayout>
				<m:Image src="./test-resources/sap/uxap/images/linkedin.png" />
				<m:Image src="./test-resources/sap/uxap/images/Twitter.png" />
			</l:HorizontalLayout>

			<l:VerticalLayout>
				<m:Label text="Hello! I am Tim and I use UxAP" />
				<m:VBox height="63px">
					<m:Label text="Achieved goals" />
					<m:ProgressIndicator percentValue="30" displayValue="30%" showValue="true" state="None" />
				</m:VBox>
			</l:VerticalLayout>

			<l:VerticalLayout>
				<m:Label text="San Jose, USA" />
			</l:VerticalLayout>
		</headerContent>

		<sections>
			<ObjectPageSection title="详细情况">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm class="mySimpleForm" xmlns="sap.m" layout="ResponsiveGridLayout" singleContainerFullSize="false" breakpointM="300" columnsM="2" labelSpanM="12" adjustLabelSpan="false">
								<core:Title />
								<Label text="总人口/户数" />
								<Text text="1000/400" />
								<Label text="本地常住人口/户数" />
								<Text text="900/350" />
								<Label text="外来人口/户数" />
								<Text text="100/50" />
								<core:Title />
								<Label text="昨日出入人次" />
								<Text text="500" />
								<Label text="异常人次" />
								<Text text="10" />
								<Label text="志愿者人数" />
								<Text text="10" />
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>