<mvc:View controllerName="sap.ibso.skyeyeForCdc.controller.Case" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:fb="sap.ui.comp.filterbar" 
	xmlns:core="sap.ui.core">
	<f:DynamicPage id="dynamicPageId" headerExpanded="true" toggleHeaderOnTitleClick="false" fitContent="false" class="sapUiNoContentPadding myDynamicPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="案例" />
				</f:heading>
				<f:content>
				</f:content>
				<f:actions>
					<Button icon="sap-icon://add" type="Transparent" />
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="false">
				<f:content>
					<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="true" showFilterConfiguration="false">
						<fb:filterGroupItems>
							<fb:FilterGroupItem name="A" label="区域" groupName="sap.ui.comp.filterbar.FilterBar.INTERNAL_GROUP" visibleInFilterBar="true">
								<fb:control>
									<Select forceSelection="true">
										<core:Item key="" text="全部" />
										<core:Item key="" text="上海" />
										<core:Item key="" text="北京" />
									</Select>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="B" label="事件类型" groupName="sap.ui.comp.filterbar.FilterBar.INTERNAL_GROUP" visibleInFilterBar="true">
								<fb:control>
									<Select forceSelection="true">
										<core:Item key="" text="全部" />
										<core:Item key="" text="传染病" />
										<core:Item key="" text="食物中毒" />
										<core:Item key="" text="自然灾害" />
									</Select>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="C" label="案例类型" groupName="sap.ui.comp.filterbar.FilterBar.INTERNAL_GROUP" visibleInFilterBar="true">
								<fb:control>
									<Select forceSelection="true">
										<core:Item key="" text="全部" />
										<core:Item key="" text="确诊" />
										<core:Item key="" text="疑似" />
										<core:Item key="" text="密切接触" />
									</Select>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<Table itemPress="onPressItem" items="{case>/}">
				<columns>
					<Column >
						<Text text="主题/编号" />
					</Column>
					<Column minScreenWidth="Desktop"
				demandPopin="true">
						<Text text="描述" />
					</Column>
					<Column minScreenWidth="Desktop"
				demandPopin="true">
						<Text text="区域" />
					</Column>
					<Column minScreenWidth="Desktop"
				demandPopin="true">
						<Text text="事件类型" />
					</Column>
					<Column minScreenWidth="Desktop"
				demandPopin="true">
						<Text text="案例类型" />
					</Column>
					<Column >
						<Text text="负责人" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<ObjectIdentifier title="{case>Title}" text="" />
							<Text text="" />
							<Text text="" />
							<Text text="" />
							<Text text="" />
							<Text text="" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>
	</f:DynamicPage>
</mvc:View>