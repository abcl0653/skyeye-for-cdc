<mvc:View controllerName="sap.ibso.skyeyeForCdc.controller.Home" 
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:uxap="sap.uxap" 
	xmlns:mc="sap.suite.ui.microchart" 
	xmlns:core="sap.ui.core">
	<uxap:ObjectPageLayout id="page" class="myObjectPageLayout" backgroundDesignAnchorBar="Transparent">
		<uxap:sections>
			<uxap:ObjectPageSection title="我的主页">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<ScrollContainer width="100%" height="100%">
								<GenericTile frameType="TwoByOne" header="汤臣社区" subheader="上海市 浦东新区 张江镇" ariaLabel="Monitoring" press="onPressTile">
									<TileContent footer="累计发生事件">
										<NumericContent value="5" valueColor="Critical" withMargin="false" icon="sap-icon://activities" />
									</TileContent>
									<TileContent footer="">
										<ColumnMicroChart xmlns="sap.suite.ui.microchart" size="Responsive">
											<!-- <leftTopLabel>
												<ColumnMicroChartLabel label="0M" />
											</leftTopLabel> -->
											<rightTopLabel>
												<ColumnMicroChartLabel label="3" />
											</rightTopLabel>
											<leftBottomLabel>
												<ColumnMicroChartLabel label="2月14日" />
											</leftBottomLabel>
											<rightBottomLabel>
												<ColumnMicroChartLabel label="2月20日" />
											</rightBottomLabel>
											<columns>
												<ColumnMicroChartData value="0" color="Good" />
												<ColumnMicroChartData value="1" color="Good" />
												<ColumnMicroChartData value="0" color="Good" />
												<ColumnMicroChartData value="1" color="Good" />
												<ColumnMicroChartData value="3" color="Critical" />
												<ColumnMicroChartData value="0" color="Good" />
												<ColumnMicroChartData value="0" color="Good" />
											</columns>
										</ColumnMicroChart>
									</TileContent>
								</GenericTile>
								<GenericTile header="任务" subheader="当前剩余待办任务" ariaLabel="Task" press="onPressTile">
									<TileContent footer="2月20日">
										<NumericContent value="12" valueColor="Critical" withMargin="false" icon="sap-icon://activity-individual" />
									</TileContent>
								</GenericTile>
								<GenericTile header="信息提报" subheader="新建任务或事件" ariaLabel="MobileUpload" press="onPressTile">
									<TileContent footer="">
										<ImageContent src="sap-icon://upload" />
									</TileContent>
								</GenericTile>
								<GenericTile header="工作人员" subheader="当前在岗/可用工作人员及志愿者" ariaLabel="Staff" press="onPressTile">
									<TileContent footer="2月20日">
										<NumericContent value="35" valueColor="Good" withMargin="false" icon="sap-icon://company-view" />
									</TileContent>
								</GenericTile>
								<GenericTile header="物资需求与库存" subheader="当前物资库存情况" ariaLabel="Requirement" press="onPressTile">
									<TileContent footer="2月20日">
										<mc:RadialMicroChart size="Responsive" percentage="95" alignContent="Right" valueColor="Good" />
									</TileContent>
								</GenericTile>
								<SlideTile press="onPressTile">
									<GenericTile backgroundImage="image/v6.png" frameType="TwoByOne" ariaLabel="Knowledge" press="onPressTile">
										<TileContent footer="2020年2月19日">
											<NewsContent contentText="关于印发新型冠状病毒肺炎诊疗方案（试行第六版）的通知" subheader="" />
										</TileContent>
									</GenericTile>
									<GenericTile backgroundImage="image/xiaodu.png" frameType="TwoByOne" ariaLabel="Knowledge" press="onPressTile">
										<TileContent footer="2020年2月12日">
											<NewsContent contentText="震惊！小区、街面这样消毒不仅无用！而且有害！" subheader="" />
										</TileContent>
									</GenericTile>
								</SlideTile>
							</ScrollContainer>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</mvc:View>